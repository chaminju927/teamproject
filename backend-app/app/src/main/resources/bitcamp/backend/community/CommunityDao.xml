<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.backend.community.dao.CommunityDao">

  <resultMap type="community" id="communityMap">
    <id column="com_no" property="category"/>
    <result column="d_no" property="docterNo"/>
    <result column="cat_no" property="categoryNo"/>
    <result column="com_title" property="title"/>
    <result column="com_date" property="createdDate"/>
    <result column="com_cont" property="content"/>
    <result column="com_view" property="viewCnt"/>
    <result column="filter" property="filter"/>
    <result column="conm_area" property="area"/>
    <result column="m_auth" property="auth"/>
    <result column="m_photo" property="phoUrl"/>
    <result column="pho_filename" property="phoName"/>
    <result column="pho_type" property="phoType"/>
  </resultMap>

  <insert id="insert" parameterType="community" 
          useGeneratedKeys="true" keyProperty="no" keyColumn="d_no">
    insert into app_doctor(d_no, career)
    values(#{no}, #{career})
  </insert>

  <select id="findAll" resultMap="communityMap">
    select 
      m.m_id, 
      m.m_name, 
      m.m_email, 
      m.m_tel,
      h.hos_name,
      d.career 
    from 
      app_doctor as d
      inner join app_member m on d.d_no = m.m_no
      left outer join app_hospital h on d.hos_no = h.hos_no
    order by 
      d_no desc
  </select>

  <select id="findByNo" parameterType="int" resultMap="communityMap">
    select
      d.d_no,
      m.m_id, 
      m.m_name, 
      m.m_email, 
      m.m_tel,
      h.hos_name,
      d.career  
    from 
      app_doctor as d
      inner join app_member m on d.d_no = m.m_no
      left outer join app_hospital h on d.hos_no = h.hos_no
    where 
      d_no=#{no}
  </select>
  
  <update id="update" parameterType="community">
    update app_community set
       career=#{career} 
    where d_no=#{no}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from app_community
    where d_no=#{no}
  </delete>
</mapper>

